page{
  background: #eee;
}
.code_list .title{
  font-size: 61rpx;
  padding: 33rpx 60rpx;
  background: #fff;
  display: block;
  font-weight: bold;
}

.item{
  background: #fff;
  margin-bottom: 14rpx;
  padding-top: 47rpx;
}
.item .item_header{
  font-size: 24rpx;
  padding:  0 63rpx;
  display: flex;
}
.item .item_header text{
  flex: 1;
}
.item .item_header image.del{
  width: 48rpx;
  height: 48rpx;
}

.item .item_body{
  display: flex;
  align-items: center;
  padding:  20rpx 63rpx;
  border-bottom: 3rpx solid #F7F7F9;
}
.item .item_body .img_box{
  width: 232rpx;
  margin-right: 32rpx;
}
.item .item_body .img_box image{
  width: 100%;
  height: 232rpx;
}
.item .item_body .img_box .pic_id{
  color: #545454;
  font-size: 21rpx;
  text-align: center;  
}

.item .item_body .txt_box{
  flex: 1;
  overflow: hidden;
}

.item .item_body .txt_box .txt_item{
  color: #3A3A3A;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item .item_body .txt_box .txt_item.anomaly{
  color:#EE2D2D
}

.item .item_body .txt_box .edit{
  width: 150rpx;
  height: 45rpx;
  line-height: 45rpx;
  border: 1rpx solid #126BE5;
  text-align: center;
  color: #126BE5;
  font-size: 24rpx;
  border-radius: 7rpx;
  margin: 0;
  padding: 0;
  min-height: auto;
}
.item .btn_group{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
}
.item .btn_group button{
  width: 204rpx;
  height: 63rpx;
  border-radius: 7rpx;
}
.item .btn_group button.update{
  background: #F7A911;
  color: #fff;
}
.item .btn_group button.share{
  background: #41CC58;
  color: #fff;
}