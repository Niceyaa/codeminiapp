.dialog{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: rgba(0,0,0,0.75)
}
.main{
  width: 80%;
  max-height:80%;
  background: #fff;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius:10rpx;
  display: flex;
  flex-direction: column;
}
.title{
  text-align: center;
  margin: 30rpx;
  font-size: 34rpx;
}
.content{
  padding: 0 20rpx;
  overflow: auto;
  flex: 1;
  -webkit-overflow-scrolling: touch; 
}
.btn_group{
  width: 100%;
  display: flex;  
  border-top: 1rpx solid #aaa;
  min-height: 90rpx; 
}
button{
  display: block;
  background: #fff;   
  flex: 1;
}